<div class="container">
  <div class="row">
    <h1 class="text-center">Login de Usuario</h1>
    <div class="login-wrap" style="width:320px;
                                    margin: 0 auto;
                                    margin-top:100px;
                                    border:1px solid #eee;
                                    padding:15px;
                                    background: #f8f8f8;
                                    border-radius: 4px;">
      <form action="/login" method="get" class="form-horizontal" role="form">
        <div class="form-group">
          <label class="col-sm-3 control-label">
            Nombre</label>
          <div class="col-sm-9">      
              <input type="text" name="inputUser" class="form-control" id="inputUser" placeholder="Escribe tu nombre" required>
          </div>
        </div>
        <div class="form-group last" style="margin-bottom:0px;">
          <div class="col-sm-offset-3 col-sm-9">
            <input type="hidden" name="form" value="1" />
            <button type="submit" class="btn btn-success btn-sm">
              Ingresar</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>